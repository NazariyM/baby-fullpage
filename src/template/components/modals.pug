mixin popup(el)
	case el.name
		when 'ask'
			// begin ask pop-up
			+b.popup(data-popup-id='ask-teacher', tabindex='-1', role='dialog')
				+e.container
					+e.close: +i('close')

					+e.H3.title Задать вопрос педагогу
					+e.FORM.form(action='#!' method='POST')
						+e.form-field
							+e.INPUT.form-input.input(type='text' placeholder='Ваше имя' name='' required)
						+e.form-row
							+e.form-field
								+e.INPUT.form-input.input(type='text' placeholder='Ваше телефон' name='' required)
							+e.form-field
								+e.INPUT.form-input.input(type='text' placeholder='Ваше email' name='' required)
						+e.form-message
							+e.TEXTAREA.form-textarea.textarea(placeholder='Ваш вопрос')

						+e.INPUT.form-submit.btn._blue(type='submit' value='Отправить вопрос')
						+e.P.form-agree * Оставляя свои контактные данные, вы соглашаетесь с
							+b.A.underlined(href='static/assets/polytics.docx' target='_blank') политикой конфиденциальности

		when 'call'
			// begin ask pop-up
			+b.popup._call(data-popup-id='order-call', tabindex='-1', role='dialog')
				+e.container
					+e.close: +i('close')

					+e.H3.title ЗАКАЗАТЬ ЗВОНОК
					+e.FORM.form(action='#!' method='POST')
						+e.form-row
							+e.form-field
								+e.INPUT.form-input.input(type='text' placeholder='Ваше имя' name='' required)
							+e.form-field
								+e.INPUT.form-input.input(type='text' placeholder='Ваше телефон' name='' required)

						+e.INPUT.form-submit.btn._blue(type='submit' value='Заказать звонок')
						+e.P.form-agree * Оставляя свои контактные данные, Вы соглашаетесь с
							+b.A.underlined(href='static/assets/polytics.docx' target='_blank') политикой конфиденциальности

		when 'choose-city'
			// begin choose-city pop-up
			+b.popup(data-popup-id='choose-city', tabindex='-1', role='dialog')
				+e.container
					+e.close._mob-in
						+i('close')

					+b.choose-city
						+b.H3.popup__title ВЫБЕРИТЕ ГОРОД
						+b.FORM.popup__form(action='#!' method='POST')
							+b.popup__form-field._search
								+b.INPUT.popup__form-input.input(type='text' placeholder='Введите название города' name='' required)
								+b.LABEL.choose-city__form-submit
									+e.INPUT.form-input.input(type='submit' name='')
									+i('search')

							+b.choose-city__popular._modal
								+b.choose-city__popular-title Популярные города:
								+b.choose-city__popular-suggests
									+b.A.underlined(href='#!') Москва
									+b.A.underlined(href='#!') Санкт-Питербург
									+b.A.underlined(href='#!') Екатеринбург
									+b.A.underlined(href='#!') Краснодар

							+b.UL.choose-city__letters._modal
								li
									a(href='#!') А
								li
									a(href='#!') Б
								li
									a(href='#!') В
								li
									a(href='#!') Г
								li
									a(href='#!') Д
								li
									a(href='#!') Е
								li
